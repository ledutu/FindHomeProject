<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"

        android:background="#F5F5F5"
        tools:context=".MainActivity">

        <ImageView
            android:id="@+id/imgImageSlider"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:scaleType="centerCrop"/>
        <TextView
            android:id="@+id/txtDetailName"
            android:text="Phòng tiện nghi có gác đẹp đường Nguyễn Hữu Thọ"
            android:textSize="20dp"
            android:textColor="#4267B2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"/>

        <TextView
            android:id="@+id/txtDetailAddress"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:drawableLeft="@drawable/pin"
            android:padding="2dp"
            android:text="Đường Nguyễn Hữu Thọ, Phường Tân Quy, Quận 7, Hồ Chí Minh" />

        <TextView
            android:id="@+id/txtDetailPhone"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:text="0938226782 - Hy Quang"
            android:padding="2dp"
            android:drawableLeft="@drawable/phone"/>

        <TextView
            android:id="@+id/txtDetailArea"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:drawableLeft="@drawable/acreage"
            android:padding="2dp" />

        <TextView
            android:id="@+id/txtDetailTime"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:drawableLeft="@drawable/time"
            android:padding="2dp" />
        <TextView
            android:id="@+id/txtDetailInformation"
            android:text="Mô tả chi tiết"
            android:textSize="15dp"
            android:textColor="#4267B2"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:padding="2dp"/>
        <TextView
            android:id="@+id/txtDetailContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"/>

    </LinearLayout>
</ScrollView>
