<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/lyMotelNews"
    android:padding="5dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginHorizontal="5dp">
        <ImageView
            android:id="@+id/imgImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"/>

        <TextView
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:background="@color/colorPrimary"
            android:text="1,2 Trieu"
            android:textColor="@color/colorWhite"
            android:gravity="center"
            android:layout_gravity="bottom"
            android:id="@+id/txtMotelCost"/>
    </FrameLayout>



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Address"
        android:textStyle="bold"
        android:id="@+id/txtAddress"
        android:maxLines="2"
        android:ellipsize="end"
        android:drawableLeft="@drawable/ic_location_black_24px"
        style="@style/DrawableButton"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="2"
        android:id="@+id/txtArea"
        android:text="Dien tich"
        android:drawableLeft="@drawable/ic_area_black_24px"
        style="@style/DrawableButton"/>

</LinearLayout>
